= render '/news/side-bar'
.category-view
  .header
    .category__nameblock
      = @category.name
  .main-content
    .main-content__block
      %ul.main-content__block__left
        - @products.each do |news|
          %li.category__block
            .image-area
              = link_to "/news/#{news.id}" do
                %img{style: "background-image: url('#{news.image_url}')"}
            .text-area
              .news-title
                = news.title
              .picker-space
                .picker-space__top
                  .picker-space__top__left
                  .picker-space__top__right
                    .top
                      山田太郎
                    .bottom
                      第一生命経済研究所　経済学部
                .picker-space__bottom
                  .comment
                    コーラ
                    コーラ
              / %ul.picker-list
              /   %li.picker-list__avatar
              /   %li.picker-list__avatar
              .meta
                .news-site
                  = news.site_name
                .pick-time
                  22年前
      .main-content__block__right
        .latest-newsblock
          .top-text-block
            新着ニュース
          - @newproducts.each do |news|
            = link_to "/news/#{news.id}" do
              .news-block
                .news-block-left
                  %img{style: "background-image: url('#{news.image_url}')"}
                .news-block-right
                  .title
                    = news.title
                  .time
                    30分前

