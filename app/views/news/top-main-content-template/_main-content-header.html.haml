.header
  //トップ画面 ヘッダー画面
  .header__left
    - @header_left_news.each do |news|
      = link_to "/news/#{news.id}" do
        .block_area
          %img{style: "background-image: url('#{news.image_url}')"}
          .text-area
            .top-space
              .count-picks
                64Picks
            .center-main-space
              .title
              = news.title
            .bottom-space
              .news-site-name
                = news.site_name
              .picks-time
                3時間前
