%li.futured-content__list__block
  //トップ画面 特集ニューエリートブロック
  .image-area
    = link_to "/news/#{news.id}" do
      %img{style: "background-image: url('#{news.image_url}')"}
  .text-area
    .news-title
      = news.title
    .picker-space
      .picker-space__top
        .picker-space__top__left
        .picker-space__top__right
          .top
            山田太郎
          .bottom
            第一生命経済研究所　経済学部
      .picker-space__bottom
        .comment
          コーラやる
          コーラやる
    / %ul.picker-list
    /   %li.picker-list__avatar
    /   %li.picker-list__avatar
    .meta
      .news-site
        = news.site_name
      .pick-time
        22年前

