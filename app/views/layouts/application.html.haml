!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Newspicks23
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render partial: "layouts/left-menu.haml"
    .main-header
      .left-area
        .menu.pulldownButton
          = image_tag "humberger.de26402b.png"
        .search-bar
          = form_tag('/news/search', method: :get) do
            = image_tag "ic_search.a18e89c7.png"
            %input.search__query{name: "keyword", placeholder: "検索する", type: "text", value: ""}
      .center-area
        .newspicks-logo
          = link_to root_path do
            = image_tag "logo_type.086ed6f5.png"
      .right-area
        .user-bar.pulldownButton
          .user-bar__left
            - if user_signed_in?
              - if current_user.avatar.present?
                = image_tag current_user.avatar
              - else
                %img
          .user-bar__right
            - if user_signed_in?
              .right-top
                = current_user.username
              .right-bottom
                学生会員
            - unless user_signed_in?
              .right-top
                No Account
              .right-bottom
                会員
        .notification-bar.pulldownButton
          = image_tag "flag.b91825e7.png"
        .item-pick.pulldownButton
          = image_tag "pen.181d3e93.png"
    = render partial: "layouts/right-menu.haml"
    = yield
